{
  "name": "rxcp-server",
  "private": true,
  "version": "1.0.0",
  "description": "API for rAthena servers",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ./src/config/ormconfig.js",
    "migration:create": "npm run typeorm migration:create -- -n",
    "migration:generate": "npm run typeorm migration:generate -- -n",
    "migration:run": "npm run typeorm migration:run",
    "migration:revert": "npm run typeorm migration:revert",
    "schema:sync": "npm run typeorm schema:sync",
    "schema:log": "npm run typeorm schema:log",
    "schema:drop": "npm run typeorm schema:drop",
    "seed:config": "ts-node ./node_modules/typeorm-seeding/dist/cli.js config -n ./src/config/ormconfig.js",
    "seed:run": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed -n ./src/config/ormconfig.js"
  },
  "dependencies": {
    "@nestjs/common": "7.1.3",
    "@nestjs/config": "0.5.0",
    "@nestjs/core": "7.1.3",
    "@nestjs/jwt": "7.0.0",
    "@nestjs/passport": "7.0.0",
    "@nestjs/swagger": "4.5.9",
    "@nestjs/platform-fastify": "7.1.3",
    "@nestjs/typeorm": "7.1.0",
    "@types/bcryptjs": "2.4.2",
    "bcryptjs": "2.4.3",
    "class-transformer": "0.2.3",
    "class-validator": "0.12.2",
    "cookie-parser": "1.4.5",
    "csurf": "1.11.0",
    "fastify": "2.14.1",
    "fastify-rate-limit": "3.0.1",
    "fastify-swagger": "2.6.0",
    "helmet": "3.22.0",
    "mysql": "2.18.1",
    "passport": "0.4.1",
    "passport-jwt": "4.0.0",
    "passport-local": "1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "6.5.5",
    "typeorm": "0.2.25",
    "typeorm-seeding": "1.6.1"
  },
  "devDependencies": {
    "@nestjs/cli": "7.2.0",
    "@nestjs/schematics": "7.0.1",
    "@nestjs/testing": "7.1.3",
    "@types/express": "4.17.6",
    "@types/faker": "4.1.12",
    "@types/jest": "25.2.3",
    "@types/node": "13.13.10",
    "@types/passport-local": "1.0.33",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "3.1.0",
    "@typescript-eslint/parser": "3.1.0",
    "eslint": "7.2.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "jest": "26.0.1",
    "prettier": "2.0.5",
    "supertest": "4.0.2",
    "ts-jest": "26.1.0",
    "ts-loader": "7.0.5",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
